<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Rating" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:rating">3.5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/artist_rating</item>
    </style>

    <style name="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_text_size</item>
    </style>

    <style name="BaseText.ArtistTopPositionText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/artist_rating_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.ArtistName">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.TrackRating">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.TrackName">
        <item name="android:textSize">@dimen/track_name_text_size</item>
    </style>

    <style name="BaseText.TrackAlbum">
        <item name="android:textSize">@dimen/track_album_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.TrackPosition">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/loader</item>
    </style>
</resources>
